APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Locale
APP_LOCALE=nl
APP_FALLBACK_LOCALE=nl
APP_FAKER_LOCALE=nl_NL

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# âœ… SESSION settings
SESSION_DRIVER=database
SESSION_DOMAIN=localhost
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_SECURE_COOKIE=false   # alleen true zetten als je HTTPS gebruikt
SESSION_SAME_SITE=lax         # 'lax' is standaard, of gebruik 'strict'

# Caching / queues
CACHE_STORE=file
QUEUE_CONNECTION=sync

# Sanctum config (voor CSRF-cookie)
SANCTUM_STATEFUL_DOMAINS=localhost:5173
SESSION_COOKIE=laravel_session

# Mail (voor later als je mail wil sturen)
MAIL_MAILER=mailgun
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="TakenApp"
MAILGUN_SECRET=
MAILGUN_DOMAIN=
MAILGUN_ENDPOINT=api.mailgun.net
